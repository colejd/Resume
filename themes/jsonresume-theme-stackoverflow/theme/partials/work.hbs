{{#if resume.work.length}}
<section class="section">
  <header>
    <h2 class='section-title'>Work Experience</h2>
  </header>

  <section id="work">
    {{#each resume.work}}
    <section class="work-item">
			{{#if company}}

      {{#if summary}}
        <input id="work-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
        <label for="work-item-{{@index}}"></label>
      {{/if}}

			<header class="clear">
				{{#if position}}
				<div class="position">{{position}}</div>
				{{/if}}
        {{#if website}}
        <span class="company website">
          <a target="_blank" href="{{website}}">{{company}}</a>
        </span>
        {{/if}}
				<div class="date">
          {{!-- {{#if startDate}}
				  <span class="startDate">{{MY startDate}}</span> 
          {{/if}}
          {{#if endDate}}
					<span class="endDate">- {{MY endDate}}</span> 
          {{else}}
					<span class="endDate">- Current</span>
          {{/if}} --}}
          {{#if startDate}}
            {{#if dateFormat}}
            <span class="startDate">{{smartDate startDate endDate dateFormat "-"}}</span>
            {{else}}
            <span class="startDate">{{smartDate startDate endDate "MMM YYYY" "-"}}</span>
            {{/if}}
          {{/if}}
				</div>
        {{!-- {{#location}}
        <span class="location">
          <span class="fas fa-map-marker-alt"></span> 
          {{#if city}}
          <span class="city">{{city}},</span>
          {{/if}} 
          {{#if countryCode}}
          <span class="countryCode">({{countryCode}})</span> 
          {{/if}} 
          {{#if region}}
          <span class="region">{{region}}</span> 
          {{/if}}
        </span>
	      {{/location}}  --}}
			</header>
			{{/if}}

      {{!-- {{#if website}}
      <span class="website">
        <a target="_blank" href="{{website}}">{{company}}</a>
      </span>
      {{/if}} --}}
			
			{{!-- {{#location}}
			<span class="location">
				<span class="fas fa-map-marker-alt"></span> 
				{{#if city}}
				<span class="city">{{city}},</span>
				{{/if}} 
				{{#if countryCode}}
				<span class="countryCode">({{countryCode}})</span> 
				{{/if}} 
				{{#if region}}
				<span class="region">{{region}}</span> 
				{{/if}}
			</span>
	    {{/location}}  --}}
			{{#if keywords.length}}
    	<ul class="keywords">
      	{{#each keywords}}
      	<li>{{.}}</li>
      	{{/each}}
    	</ul>
    	{{/if}}
    	<div class="item" id="work-item">
        {{#if summary}}
        <div class="summary">{{paragraphSplit summary}}</div>
        {{/if}} 
        {{#if highlights.length}}
        <ul class="highlights">
          {{#each highlights}}
            <li>{{paragraphSplit .}}</li>
          {{/each}}
        </ul>
        {{/if}}
    	</div>
    </section>
    {{/each}}
  </section>
</section>
{{/if}}
